#message {
  border-radius: 5px;
  color: #fff;
  font-size: 16px;
  display: inline-block;
  margin: auto;
  padding: 5px 20px;
  display: none;
}

.error {
  border: 1px solid #c0392b;
  background-color: rgba(231, 76, 60, 0.6);
}
.success {
  border: 1px solid #27ae60;
  background-color: rgba(46, 204, 113, 0.6);
}

/*LAYOUT*/

.container {
  max-width: 900px;
  margin: auto;
  padding: 10px;
}


